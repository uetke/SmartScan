<?xml version="1.0" encoding="utf-8"?>

<scantools>
    <hosts>
        <driver-host group="Serial" type="Newport1830c"
                     description="Newport 1830c power meter"
                     object-mode="one-per-device"
                     class="scantools.devices.powermeter.PowerMeterHost"/>
    </hosts>
    <user-interfaces>
        <application name="SmartScan"
                     description="Scanning confocal tool"
                     launch-mode="QMainWindow" class="GUI.MainWindow.InitWindow">
            <requires-adwin/>
        </application>
        <application name="Monitor Trap"
                     description="Optical tweezers"
                     launch-mode="QMainWindow" class="GUI.Trap.Monitor.Monitor">
            <requires-adwin/>
        </application>
        <application name="Powermeter"
                     description="Display the power meter reading on screen"
                     launch-mode="QMainWindow" class="scantools.ui.powermeter.PowerMeterWindow">
            <requires-device group="Serial" type="Newport1830c"/>
        </application>
        <application name="Shutters"
                     description="Control shutters."
                     launch-mode="QMainWindow" class="scantools.ui.shutters.ShuttersWindow">
            <requires-adwin/>
            <requires-test callable="scantools.devices.shutters.check_for_shutters"/>
        </application>
        <!--<application name="Special Tasks"
                     description="Launch special task within this process"
                     launch-mode="QMainWindow" class="scantools.ui.special_tasks.LauncherWindow"/>-->
    </user-interfaces>
</scantools>
